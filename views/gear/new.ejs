<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <form action="/gear" method="post">
          <fieldset>
              <legend>ADD NEW GEAR</legend>
            <label>
              Name:<input
                type="text"
                name="name"
                placeholder="enter model name"
              />
            </label>
            <label>
              Maker:<input
                type="text"
                name="maker"
                placeholder="enter maker name"
              />
            </label>
            <label>
            <label>
              Type:<input
                type="text"
                name="type"
                placeholder="enter gear type"
              />
            </label>
            <label>
              Price:<input
                type="number"
                name="price"
                placeholder="enter gear price"
              />
            </label>
            <label>
              Description:<input
                type="text"
                name="description"
                placeholder="enter description of gear"
              />
            </label>
              NEW: <input type="checkbox" name="new" />
            </label>
            <label>
              USED: <input type="checkbox" name="used" />
            </label>
          </fieldset>
        
          <input type="submit" value="create new listing" />
        </form>
      </div>
    </main>
  </body>
</html>